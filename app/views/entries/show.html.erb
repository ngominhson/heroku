<div style = 'margin-top: 40p;'>
<h2>
	<%= @entry.title %>
    <%= @entry.id %>
</h2>

<span>
	<%= @entry.body %>
</span>
</div>
<span>
	<% if @comments.any? %>
		<ul>			
			<% @comments.each do |comment| %>
				<div>
					<li><%= comment.content %>
					<i><%= User.find(comment.user_id).name %> </i>
					comment <%= time_ago_in_words(comment.created_at) %> ago.
					</li>
					
				</div>
			<% end %>
		</ul>
	<% else %>
		<i>There is no comment</i>
	<% end %>
</span>
<span>
  <%= form_for(@comment) do |f| %>
  <div class="field">
    <font color = "blue"><%= f.text_area :content, placeholder: "type something..." %>
  	<%= f.hidden_field :entry_id, value: @entry.id %>
  	<%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
  	<%=current_user.id %>
  	
<% end %>
</span>