<div style = 'margin-top: 40p;'>
<h2>
	<%= @entry.title %>
</h2>

<span>
	<%= @entry.body %>
</span>
</div>
<span>
	<% if @comments.any? %>
		<ul>			
			<% @comments.each do |comment| %>
				<div>
					<li><%= comment.content %>
					<i><%= User.find(comment.user_id).name %> </i>
					comment <%= time_ago_in_words(comment.created_at) %> ago.
					</li>
					
				</div>
			<% end %>
		</ul>
	<% else %>
		<i>There is no comment</i>
	<% end %>
</span>
<span>
  <%= render 'shared/comment_content'%>  
</span>