<%= form_for(@comment) do |f| %>
  <div class="field">
    <font color = "blue"><%= f.text_area :content, placeholder: "type something..." %>
  	<%= f.hidden_field :entry_id, value: @entry_id %>
  	<%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>